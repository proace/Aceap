<script>
jQuery( document ).ready(function($) {
    $('#removePayment').on('click', function(e){
        var selected = [];
        $(':checkbox:checked').each(function() {
            selected.push($(this).attr('type_id'));
        });
        jQuery.ajax({
          url: "<?=BASE_URL;?>/payments/deletePaymentType",
          type: "POST",
          data: {typeIds:selected},
          success: function(data){
            location.href = "<?=BASE_URL;?>/payments/showPaymentTypes";
          }
        });
    });

    $('.showPicture').on('change', function(elem_chk){
        var jobtype_id = $(this).attr('type_id');
        if ($(this).is(':checked')){
            $.get("<?=BASE_URL;?>/payments/changePictureActive",
            {jobtype_id:jobtype_id,is_active:1},
            function(data){document.forms['viewform'].submit();});
         }
        else {
                $.get("<?=BASE_URL;?>/payments/changePictureActive",
                {jobtype_id:jobtype_id,is_active:0},
                function(data){document.forms['viewform'].submit();});
            }
        });
});

</script>
