<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Job Approval</title>
<script type="text/javascript" src="<?=ROOT_URL;?>/app/webroot/js/jquery-1.5.1.min.js"></script>
<script type="text/javascript">
$(function(){
	$("#check_all1").click(function(){
		if($(this).is(':checked')) {
			$('.check_this1').attr('checked','checked');
		} else {
			$('.check_this1').removeAttr('checked');
		}
	});
	
	$("#check_all2").click(function(){
		if($(this).is(':checked')) {
			$('.check_this2').attr('checked','checked');
		} else {
			$('.check_this2').removeAttr('checked');
		}
	});
});
</script>
</head>

<body>
<form action="<?php echo BASE_URL ?>/orders/saveJobApproval" method="post">
<table border="1">
	<tr>
    	<th>Ref#</th>
        <th>Date</th>
        <th>Tech 1</th>
        <th>Tech 2</th>
        <th>Needs Approval?<input type="checkbox" id="check_all1" /></th>
    </tr>
    <?php foreach($jobs as $id => $job) {  //echo 'APP::'.$job['needs_approval'];    ?>
    <tr>
    	<td><?php echo $job['order_number'] ?></td>
        <td><?php echo $job['job_date'] ?></td>
        <td><?php echo $job['tech1'] ?></td>
        <td><?php echo $job['tech2'] ?></td>
        <?php if($job['needs_approval'] == 1) { ?>
        <td style="text-align:center"><input type="checkbox" class="check_this1" checked="checked" name="data[Approval][<?php echo $id ?>]" value="1" /></td>
        <?php } else if($job['needs_approval'] == 0){ ?>
        <td style="text-align:center"><input type="checkbox" class="check_this1" name="data[Approval][<?php echo $id ?>]" value="1" /></td>
        <?php }else{?>
        <td style="text-align:center"><input type="checkbox" class="check_this1" checked="checked" name="data[Approval][<?php echo $id ?>]" value="1" /></td>
        <?php } ?>        
        <input type="hidden" name="data[NoApproval][<?php echo $id ?>]" value="0" />
    </tr>
    <?php } ?>
</table>
<input type="submit" value="Save" />
</form>
</body>
</html>