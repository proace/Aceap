	<script>

		function sendEmail() {

			var save = false;
			var form = document.forms['emailForm'];
			if (form.elements['to'].value != '<?php echo $to[0]; ?>') {
				//save = confirm('Save new email address for: <?php echo $first_name.' '.$last_name; ?>');
			}

			var data = $('#emailForm').serializeArray();
			data.push({ name: 'save', value: save });

			$.ajax({
				url: '<?php echo $target; ?>',
				type: 'POST',
				data: data,
				complete: function() {
					window.close();
				}
			});

	    }
	</script>
