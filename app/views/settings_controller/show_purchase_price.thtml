 $("#show-purchase").on("change", function(){
       if ($(this).is(':checked')){
            $.get("<?=BASE_URL;?>/settings/changePurchaseActive",
            {purchase_id:1,is_active:1},
            function(data){ 
                window.opener.location.reload();
                window.close();
              });
