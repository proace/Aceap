<style type="text/css">
.chat{
	font-size: 11px;
	font-family: "Arial", "Helvetica", sans-serif;
	line-height: 20px;
}
.ace_chat{
	color: #b00f0b;
}
.user_chat{
	color: #06790c;
}
.list_chat{
	width:100%;
	border:1px solid #999999;
	border-bottom-style:none;
	cursor:pointer;
}
.list_chat td{
	background: #EEFFEE;
	border-bottom:1px solid #999999;
	font-size: 12px;
	height: 25px;
}
